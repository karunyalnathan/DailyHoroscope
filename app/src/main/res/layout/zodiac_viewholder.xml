<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/secondary"
    android:padding="8dp">
    <ImageView
        android:id="@+id/zodiacVHimageView"
        android:background="@color/secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tint="@color/primary700"
        tools:src="@drawable/icon_glyph_scorpio"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/zodiacVHtextView"
        android:background="@color/secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="4dp"
        android:textAppearance="@style/TextAppearance.Headline6"
        tools:text="@string/scorpio"/>
</LinearLayout>